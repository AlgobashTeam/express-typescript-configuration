{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "jsx": "preserve",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "alwaysStrict": true,
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      }
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "include": [
      "src/**/*.ts"
  ]
}
